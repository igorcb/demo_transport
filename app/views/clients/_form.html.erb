<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

<h2>Phones</h2>
<div id="phones">
  <div class="items">
    <%= f.nested_fields_for :phones do |f|
      render 'phone', f: f
     end -%>
  </div>
  <a href="#" class="add">add phone</a>
</div>


  <h2>Contatos</h2>
  <div id="contact">
  <div class="items">
    <%= f.nested_fields_for :contacts do |f|
      render 'contact', f: f
    end -%>
  </div>
  <a href="#" class="add">add contact</a>
  </div>

  <h2>Documentos</h2>
  <div id="document">
  <div class="items">
    <%= f.nested_fields_for :assets do |f|
      render 'asset', f: f
    end -%>
  </div>
  <a href="#" class="add">add documento</a>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
